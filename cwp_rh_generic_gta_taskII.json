{
  "name": "cwp_rh_generic_gta_format",
  "urn": "urn:fdi:format:generic:gta",
  "title": "CWP TG-RH generic GTA data exchange format - geo-referenced catch",
  "column_specs": [
    {
      "name": "source_authority",
      "urn": "urn:fdi:term:source_authority",
      "aliases": ["rfmo"],
      "required": true,
      "rules": [
        {
          "vrule": "codelist",
          "args": {
            "ref_data_url": "https://raw.githubusercontent.com/fdiwg/fdi-codelists/main/global/firms/gta/cl_tuna_rfmos.csv"
          }
        }
      ]
    },
    {
      "name": "fishing_fleet",
      "urn": "urn:fdi:term:fishing_fleet",
      "required": true,
      "rules": [
        {
          "vrule": "codelist",
          "args": {
            "ref_data_url": "https://raw.githubusercontent.com/fdiwg/fdi-codelists/main/global/firms/gta/cl_fishing_fleet.csv"
          }
        }
      ]
    },
    {
      "name": "time_start",
      "urn": "urn:fdi:term:time_start",
      "required": true,
      "rules": [
		{
		  "vrule": "cross_column",
		  "args": {
			  "operator": "<",
			  "expr": "row$time_end"
		  }
		}
	  ]
    },
    {
      "name": "time_end",
      "urn": "urn:fdi:term:time_end",
      "required": true,
      "rules": [
		{
		  "vrule": "cross_column",
		  "args": {
			  "operator": ">",
			  "expr": "row$time_start"
		  }
		}
	  ]
    },
    {
      "name": "geographic_identifier",
      "urn": "urn:fdi:term:geographic_identifier",
      "required": true,
      "rules": [
        {
          "vrule": "codelist",
          "args": {
            "ref_data_url": "https://raw.githubusercontent.com/fdiwg/fdi-codelists/main/global/cwp/cl_areal_grid_erased_nogeom.csv"
          }
        }
      ]
    },
    {
      "name": "gear_type",
      "urn": "urn:fdi:term:gear_type",
      "required": true,
      "rules": [
        {
          "vrule": "codelist",
          "args": {
            "ref_data_url": "https://raw.githubusercontent.com/fdiwg/fdi-codelists/main/global/cwp/cl_isscfg_gear.csv"
          }
        }
      ]
    },
    {
      "name": "species",
      "urn": "urn:fdi:term:species",
      "required": true,
      "rules": [
        {
          "vrule": "codelist",
          "args": {
            "ref_data_url": "https://raw.githubusercontent.com/fdiwg/fdi-codelists/main/global/cwp/cl_asfis_species.csv"
          }
        }
      ]
    },
    {
      "name": "fishing_mode",
      "urn": "urn:fdi:term:fishing_mode",
      "required": true,
      "rules": [
        {
          "vrule": "codelist",
          "args": {
            "ref_data_url": "https://raw.githubusercontent.com/fdiwg/fdi-codelists/main/global/firms/gta/cl_fishing_mode.csv"
          }
        }
      ]
    },
    {
      "name": "measurement",
      "urn": "urn:fdi:term:measurement",
      "required": true,
      "rules": [
        {
          "vrule": "raw_codelist",
          "args": {
            "ref_values": ["catch"]
          }
        }
      ]
    },
    {
      "name": "measurement_type",
      "urn": "urn:fdi:term:measurement_type",
      "required": true,
      "rules": [
        {
          "vrule": "raw_codelist",
          "args": {
            "ref_values": ["retained"]
          }
        }
      ]
    },
    {
      "name": "measurement_value",
      "urn": "urn:fdi:term:measurement_value",
      "required": true,
      "rules": [
	    {
		  "vrule": "if",
		  "args": {
			"if_condition": "!is.na(value)",
			"then_apply": [
				{
				  "vrule": "threshold",
				  "args": {
					"operator": ">",
					"threshold": 0
				  }
				}
			]
		  }
		}
      ]
    },
    {
      "name": "measurement_unit",
      "urn": "urn:fdi:term:measurement_unit",
      "required": true,
      "rules": [
		{
		  "vrule": "if",
		  "args": {
			"if_condition": "!is.na(row$measurement_value)",
			"then_apply": [
				{
				  "vrule": "raw_codelist",
				  "args": {
					"ref_values": ["t"]
				  }
				}
			]
		  }
		}
      ]
    },
    {
      "name": "measurement_status",
      "urn": "urn:fdi:term:measurement_status",
      "required": false,
      "rules": []
    }
  ]
}
